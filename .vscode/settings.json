{
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.organizeImports.biome": "explicit",
    "source.fixAll.biome": "explicit",
    "quickfix.biome": "explicit"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  // 设置编辑器默认格式化工具为 Biome
  "editor.defaultFormatter": "biomejs.biome",
  // 设置 TypeScript 的 TypeScript SDK 路径
  "typescript.tsdk": "node_modules/typescript/lib",
  // 设置工作区编辑器自定义标签模式，匹配 Next.js 的页面和布局文件
  "workbench.editor.customLabels.patterns": {
    "**/app/**/page.tsx": "${dirname} - Page",
    "**/app/**/layout.tsx": "${dirname} - Layout"
  },
  /**
   * Tailwind CSS IntelliSense Extension Settings
   *
   * 1. "files.associations" tell VS Code to always open .css files in Tailwind CSS mode.
   * 2. "editor.quickSuggestions" enable quick suggestions for strings.
   * 3. "tailwindCSS.experimental.classRegex" ​自定义 Tailwind 类名的匹配规则.
   */
  "files.associations": {
    "*.css": "tailwindcss"
  },
  "editor.quickSuggestions": {
    "strings": "on"
  },
  "tailwindCSS.experimental.classRegex": [
    ["clsx\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"],
    ["cva\\(((?:[^()]|\\([^()]*\\))*)\\)", "[\"'`]?([^\"'`]+)[\"'`]?"],
    ["cn\\(((?:[^()]|\\([^()]*\\))*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"]
  ]
}
